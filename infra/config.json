{
  "boards": [
    {
      "name": "qemu_virt",
      "arch": "arm64",
      "boot_image": "bin",
      "board_zig": "src/kernel/arch/arm64/boards/qemu_virt/board.zig",
      "linker_script": "src/kernel/arch/arm64/boards/qemu_virt/kernel.ld",
      "qemu": {
        "system": "qemu-system-aarch64",
        "machine": "virt,gic-version=3",
        "cpu": "cortex-a76",
        "args": ["-smp", "2", "-m", "2G"]
      }
    },
    {
      "name": "qemu_virt",
      "arch": "riscv64",
      "boot_image": "elf",
      "board_zig": "src/kernel/arch/riscv64/boards/qemu_virt/board.zig",
      "linker_script": "src/kernel/arch/riscv64/boards/qemu_virt/kernel.ld",
      "qemu": {
        "system": "qemu-system-riscv64",
        "machine": "virt",
        "cpu": "rv64",
        "args": ["-smp", "2", "-m", "2G", "-bios", "default"]
      }
    }
  ],
  "smoke": {
    "timeout_secs": 15,
    "parallel": true,
    "variants": [
      { "board": "qemu_virt", "arch": "arm64", "optimize": "Debug" },
      { "board": "qemu_virt", "arch": "arm64", "optimize": "ReleaseFast" },
      { "board": "qemu_virt", "arch": "riscv64", "optimize": "Debug" },
      { "board": "qemu_virt", "arch": "riscv64", "optimize": "ReleaseFast" }
    ]
  }
}
